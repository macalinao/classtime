<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h1 class="page-header"><%= @schedule.semester.name %> Semester</h1>
    </div>
  </div>

  <div class="row">

    <div class="col-md-6">
      <% @schedule.courses.each do |c| %>
        <h3><%= c.number %>.<%= c.section %></h3>
        <h4><%= c.name %></h4>
        <table class="table">

          <tr>
            <th>Credits</th>
            <td><%= c.credits %> credits</td>
          </tr>

          <tr>
            <th>Time</th>
            <% if c.start_time %>
              <td><%= c.days %> <%= time c.start_time %> to <%= time c.end_time %></td>
            <% else %>
              <td>Online</td>
            <% end %>
          </tr>

          <tr>
            <th>Room</th>
            <td><%= c.room %></td>
          </tr>

          <tr>
            <th>Instructor</th>
            <td><%= c.instructor %></td>
          </tr>

          <tr>
            <th>Friends</th>
            <td>
              <% friends = c.friends_enrolled(current_user) %>
              <p>
                <%= pluralize c.friends_enrolled(current_user).length, 'friend' %> enrolled
              </p>
              <% friends.each do |friend| %>
                <img src="<%= friend.image %>" />
              <% end %>
            </td>
          </tr>

        </table>
      <% end %>
    </div>

    <div class="col-md-6">
      <h2>Schedule</h2>
      <table class="table">
        <% @schedule.agenda.each do |day, courses| %>
          <tr>
            <th><%= day %></th>
            <td>
              <% courses.each do |course| %>
                <p><h4><%= course.name %></h4></p>
                <% if course.start_time %>
                  <p><%= time course.start_time %> to <%= time course.end_time %></p>
                <% else %>
                  <p>Online</p>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

  </div>
</div>
